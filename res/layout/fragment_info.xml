<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Pustakshala"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Pustakshala!"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pustakshala is your ultimate destination for discovering and exploring a curated selection of books. Whether you're an avid reader or just beginning your reading journey, Pustakshala offers something for everyone."
        android:layout_marginBottom="16dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Features:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Browse through a handpicked collection of books across various genres."
        android:layout_marginBottom="4dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- View book prices and ratings to make informed decisions."
        android:layout_marginBottom="4dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Dive into short descriptions of each book to learn more about them."
        android:layout_marginBottom="4dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Enjoy a user-friendly interface designed for seamless navigation."
        android:layout_marginBottom="16dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="At Pustakshala, we are dedicated to promoting the joy of reading and connecting readers with captivating stories. Join our community of book enthusiasts and embark on an exciting literary adventure today!"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy reading!"
        android:textSize="18sp"
        android:textStyle="italic"/>

</LinearLayout>
